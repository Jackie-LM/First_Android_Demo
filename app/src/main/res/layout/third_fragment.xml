<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_3_s">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/noplan_title"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:paddingTop="40dp"
            android:rotation="-5"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:text="When we have no plan\nWe tend to make a plan\nYet the plan doesn't work\n we may just have no plan"/>

        <TextView
            android:id="@+id/play_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:paddingTop="60dp"
            android:paddingBottom="50dp"
            android:text="@string/icon_play"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                android:elevation="5dp"
                app:cardBackgroundColor="#4DFFFFFF"
                >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="30dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:text="To learn how to make a plan, we made a plan.\n But Since We don't know how to make a plan,\n we can not make a plan\n "
                        />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                android:elevation="5dp"
                app:cardBackgroundColor="#4DFFFFFF"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="To learn how to make a plan, we made a plan.\n But Since We don't know how to make a plan,\n we can not make a plan\n "
                    />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>