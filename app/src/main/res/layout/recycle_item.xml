<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="225dp"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:padding="5dp"
        card_view:cardCornerRadius="15dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/item1"
                android:transitionName="@string/image"/>

            <TextView
                android:id="@+id/item_info_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Peaceful Moment the witcher long long long long long long "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:fontFamily="serif"
                    android:gravity="center_vertical"
                    android:text="Music - original"
                    android:textColor="#95A5A6"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10dp" />

                <TextView
                    android:paddingBottom="3dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_more"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="#95A5A6"
                    android:text="@string/icon_more"
                    android:textSize="15dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_marginTop="90dp"
            android:paddingRight="10dp">

<!--            <ImageView-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"-->
<!--                android:paddingRight="5dp"-->
<!--                android:src="@drawable/icons_play" />-->

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/icon_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:text="@string/icon_play"/>


            <TextView
                android:id="@+id/view_number_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="100 view"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/time_duration_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="5:08"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>